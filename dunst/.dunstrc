[global]
    font = "WenQuanYi Zen Hei10"
    allow_markup = yes
    format = "<b>%s %p</b>\n%b"
    sort = yes
    indicate_hidden = yes
    # geometry = "x5"
    idle_threshold = 0
    #geometry = "300x5-20+20"
    geometry = "300x5-0-24"
    alignment = center
    icon_position = left
    show_icons = yes
    icon_folders = /usr/share/icons/Papirus/48x48/actions:/usr/share/icons/Papirus/48x48/animations:/usr/share/icons/Papirus/48x48/apps:/usr/share/icons/Papirus/48x48/devices:/usr/share/icons/Papirus/48x48/emblems:/usr/share/icons/Papirus/48x48/mimetypes:/usr/share/icons/Papirus/48x48/panel:/usr/share/icons/Papirus/48x48/places:/usr/share/icons/Papirus/48x48/status

    shrink = no
    transparency = 25
    show_age_threshold = 60
    sticky_history = yes
    follow = mouse
    word_wrap = yes
    separator_height = 2
    padding = 10
    horizontal_padding = 10
    separator_color = frame


[frame]
    width = 1
    color = "#47475c"

[urgency_low]
    foreground = "#586e75"
    background = "#eee8d5"
    timeout = 2

[urgency_normal]
    foreground = "#002b36"
    background = "#eee8d5"
    timeout = 4

[urgency_critical]
    foreground = "#dc322f"
    background = "#eee8d5"
    timeout = 0
